{
  "kind": "collectionType",
  "collectionName": "orders",
  "info": {
    "name": "order",
    "description": ""
  },
  "options": {
    "increments": true,
    "timestamps": true,
    "draftAndPublish": true
  },
  "attributes": {
    "email": {
      "type": "email",
      "required": true,
      "unique": false,
      "private": true
    },
    "first_name": {
      "type": "string",
      "required": true
    },
    "contact_number": {
      "type": "string",
      "private": true
    },
    "house_building_unit": {
      "type": "string",
      "private": true
    },
    "street": {
      "type": "string",
      "private": true
    },
    "city": {
      "type": "string",
      "private": true
    },
    "barangay": {
      "type": "string",
      "private": true
    },
    "province": {
      "type": "string",
      "private": true
    },
    "region": {
      "type": "string",
      "private": true
    },
    "total": {
      "type": "decimal"
    },
    "sub_total": {
      "type": "decimal"
    },
    "shipping": {
      "type": "decimal"
    },
    "order_number": {
      "type": "string",
      "unique": true,
      "required": false
    },
    "status": {
      "type": "enumeration",
      "enum": [
        "pending",
        "paid",
        "shipped",
        "delivered",
        "cancelled",
        "refunded"
      ],
      "default": "pending",
      "required": true,
      "private": false
    },
    "landmarks": {
      "type": "text"
    },
    "items": {
      "type": "json",
      "required": true
    },
    "uuid": {
      "type": "uid"
    },
    "payment_method": {
      "type": "enumeration",
      "enum": [
        "gcash",
        "bpi"
      ]
    },
    "last_name": {
      "type": "string",
      "required": true
    },
    "discount": {
      "model": "discount"
    },
    "shipping_method": {
      "type": "string",
      "required": true
    }
  }
}
