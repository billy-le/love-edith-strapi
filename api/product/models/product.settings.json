{
  "kind": "collectionType",
  "collectionName": "products",
  "info": {
    "name": "product",
    "description": ""
  },
  "options": {
    "increments": true,
    "timestamps": true,
    "draftAndPublish": true
  },
  "attributes": {
    "name": {
      "type": "string",
      "required": true,
      "unique": true
    },
    "description": {
      "type": "text",
      "unique": true
    },
    "images": {
      "collection": "file",
      "via": "related",
      "allowedTypes": [
        "images"
      ],
      "plugin": "upload",
      "required": true
    },
    "is_featured": {
      "type": "boolean",
      "default": false,
      "unique": true
    },
    "is_sold_out": {
      "type": "boolean",
      "default": false,
      "required": false,
      "unique": true
    },
    "is_discontinued": {
      "type": "boolean",
      "unique": true,
      "default": false
    },
    "price": {
      "type": "decimal",
      "required": true,
      "min": 0,
      "default": 1,
      "unique": true
    },
    "variants": {
      "via": "product",
      "collection": "variant"
    },
    "slug": {
      "type": "uid",
      "targetField": "name",
      "required": true
    },
    "model_and_fit": {
      "type": "text",
      "unique": true
    },
    "fabric_and_care": {
      "type": "text",
      "unique": true
    },
    "size_chart": {
      "type": "richtext"
    }
  }
}
